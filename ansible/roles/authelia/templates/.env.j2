# Authelia Environment Variables
# IMPORTANT: Generate secure random values for production use

# JWT Secret (minimum 32 characters)
AUTHELIA_JWT_SECRET={{ authelia_jwt_secret }}

# Session Secret (minimum 32 characters)
AUTHELIA_SESSION_SECRET={{ authelia_session_secret }}

# Storage Encryption Key (minimum 32 characters)
AUTHELIA_STORAGE_ENCRYPTION_KEY={{ authelia_storage_encryption_key }}

# Admin User Configuration
AUTHELIA_ADMIN_USER={{ authelia_admin_user }}
AUTHELIA_ADMIN_DISPLAYNAME={{ authelia_admin_displayname }}
AUTHELIA_ADMIN_EMAIL={{ authelia_admin_email }}
AUTHELIA_ADMIN_PASSWORD_HASH={{ authelia_admin_password_hash }}

