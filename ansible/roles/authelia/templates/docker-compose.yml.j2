version: '3.8'

services:
  redis:
    image: redis:7-alpine
    container_name: authelia_redis
    volumes:
      - redis_data:/data
    restart: unless-stopped
    command: redis-server --appendonly yes

  authelia:
    image: {{ authelia_image }}
    container_name: authelia
    ports:
      - "{{ authelia_port }}:9091"
    volumes:
      - {{ authelia_config_directory }}:/config
      - {{ authelia_data_directory }}:/data
    environment:
      - TZ={{ system_timezone }}
    env_file:
      - .env
    depends_on:
      - redis
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:9091/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

volumes:
  redis_data: