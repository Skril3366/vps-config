theme: dark
default_2fa_method: "totp"

server:
  address: "tcp://0.0.0.0:9091/"
  headers:
    csp_template: ""

log:
  level: debug
  format: text
  file_path: /data/authelia.log
  keep_stdout: true

totp:
  disable_reuse_security_policy: false
  issuer: {{ authelia_domain }}
  algorithm: sha1
  digits: 6
  period: 30
  skew: 1
  secret_size: 32

identity_validation:
  reset_password:
    jwt_secret: ${AUTHELIA_JWT_SECRET}

authentication_backend:
  password_reset:
    disable: false
  refresh_interval: 5m
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      iterations: 1
      key_length: 32
      salt_length: 16
      memory: 64
      parallelism: 8

access_control:
  default_policy: deny
  rules:
    - domain: "{{ authelia_domain }}"
      policy: bypass
    - domain: "grafana.{{ domain_name }}"
      policy: one_factor
    - domain: "prometheus.{{ domain_name }}"
      policy: one_factor
    - domain: "loki.{{ domain_name }}"
      policy: one_factor

session:
  name: authelia_session
  same_site: lax
  secret: ${AUTHELIA_SESSION_SECRET}
  expiration: 1h
  inactivity: 5m
  remember_me: 1M
  cookies:
    - domain: {{ session_domain }}
      authelia_url: https://{{ authelia_domain }}
      default_redirection_url: https://grafana.{{ domain_name }}
  redis:
    host: redis
    port: 6379

regulation:
  max_retries: 10
  find_time: 2m
  ban_time: 5m

storage:
  encryption_key: ${AUTHELIA_STORAGE_ENCRYPTION_KEY}
  local:
    path: /data/db.sqlite3

notifier:
  disable_startup_check: false
  filesystem:
    filename: /data/notification.txt