# Authelia Environment Variables Template
# Copy this file to .env in your inventory directory and fill in the values
# Generate secure random values for production use

# JWT Secret (minimum 32 characters) - Generate with: openssl rand -base64 32
AUTHELIA_JWT_SECRET=CHANGE_ME_JWT_SECRET_32_CHARS_MIN

# Session Secret (minimum 32 characters) - Generate with: openssl rand -base64 32
AUTHELIA_SESSION_SECRET=CHANGE_ME_SESSION_SECRET_32_CHARS

# Storage Encryption Key (minimum 32 characters) - Generate with: openssl rand -base64 32
AUTHELIA_STORAGE_ENCRYPTION_KEY=CHANGE_ME_STORAGE_ENCRYPTION_KEY_32

# Admin User Configuration
AUTHELIA_ADMIN_USER=admin
AUTHELIA_ADMIN_DISPLAYNAME=Administrator
AUTHELIA_ADMIN_EMAIL=admin@yourdomain.com

# Admin Password Hash - Generate with: docker run --rm authelia/authelia:latest authelia hash-password 'yourpassword'
AUTHELIA_ADMIN_PASSWORD_HASH=$argon2id$v=19$m=65536,t=3,p=4$CHANGEME$CHANGEME